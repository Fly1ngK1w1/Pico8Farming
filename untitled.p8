--pllayer--

function iplr()
	plr={
		x=20,
		y=20
	}
end

function uplr()
	if btn(➡️) then--movement--
		plr.x+=1
		elseif btn(⬅️) then
			plr.x-=1
		elseif btn(⬆️) then
			plr.y-=1
		elseif btn(⬇️) then
			plr.y+=1
	end
	
	local ptx=(plr.x+4)/8
	local pty=(plr.y+6)/8
	
	if btnp(❎) then --plant crops--
		if mget(ptx, pty)==3 then
			mset(ptx,pty,4)
			add(seeds,{
				sx=ptx,
				sy=pty,
				tig=0
			})
		else
			mset(ptx,pty,3)
		end
	end
end

function dplr()
	spr(2,plr.x,plr.y)
end
